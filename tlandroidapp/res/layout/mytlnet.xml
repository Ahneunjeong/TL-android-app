<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fadingEdgeLength="0dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    <LinearLayout
        android:focusable="true" 
	    android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:id="@+id/loggedIn"
        android:visibility="gone" >
        
        <LinearLayout
	    	android:focusable="true" 
	    	android:focusableInTouchMode="true"
	    	android:layout_width="0px" 
	    	android:layout_height="0px"/>

        <LinearLayout
            android:id="@+id/mytlnetLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="5dip"
                    android:text="Welcome"
                    android:textSize="20dp"
                    android:textColor="@color/TLText"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="20dp"
                    android:id="@+id/usernameText"
                    android:textColor="@color/TLText"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
            <Button
					android:id="@+id/logoutButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					
					android:background="@drawable/button_gradient"
					android:text="Logout"
					android:textColor="@color/TLBlue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <Button
                android:id="@+id/subButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:background="@drawable/button_gradient"
                android:enabled="false"
                android:text="Subscribed Threads"
                android:textColor="@color/TLBlue" />
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/viewPostsButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/button_gradient"
                    android:enabled="false"
                    android:text="My Posts"
                    android:textColor="@color/TLBlue" />
            </LinearLayout>

            <Button
                android:id="@+id/pmButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:background="@drawable/button_gradient"
                android:enabled="false"
                android:text="PM"
                android:textColor="@color/TLBlue" />

            <Button
                android:id="@+id/settingsButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:background="@drawable/button_gradient"
                android:enabled="true"
                android:text="Settings"
                android:textColor="@color/TLBlue" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/loggedOut"
	    android:background="@color/TLBlue3"
	    android:gravity="center"
	    android:focusable="true" 
	    android:focusableInTouchMode="true">
        <LinearLayout
	    	android:focusable="true" 
	    	android:focusableInTouchMode="true"
	    	android:layout_width="0px" 
	    	android:layout_height="0px"/>
	    	<ImageView android:src="@drawable/tl_logo"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:paddingBottom="10dp"/>
	    	<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:text="LOGIN"
				android:textColor="@color/TLBlue"
				android:textStyle="bold" />
	    	<EditText
	    	    android:paddingLeft="5dip"
				android:id="@+id/username"
				android:layout_width="200dp"
				android:layout_height="34dp"
				android:textSize="20dp"
				android:singleLine="true"
				android:background="@drawable/rounded_edittext" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:text="PASSWORD"
				android:textColor="@color/TLBlue"
				android:textStyle="bold"
				android:paddingTop="10dp" />
	
			<EditText
			    android:paddingLeft="5dip"
				android:id="@+id/password"
				android:layout_width="200dp"
				android:layout_height="34dp"
				android:textSize="20dp"
				android:password="true"
				android:singleLine="true"
				android:background="@drawable/rounded_edittext" />
			<LinearLayout 
			    android:gravity="center_horizontal" 
			    android:layout_width="200dp"
			    android:layout_height="50dp"
			    android:paddingTop="10dp">
			    <CheckBox
	                    android:id="@+id/rememberMeCheckBox"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"/>
	            <TextView
	                android:id="@+id/rememberMeCheckBoxText"
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"
	                android:gravity="center"
	                android:text="Remember me"
	                android:paddingRight="5dp"
	                android:textColor="@color/TLBlue" />
			    <Button
					android:id="@+id/loginButton"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_marginRight="3dp"
					android:background="@drawable/button_gradient"
					android:text="Login"
					android:textColor="@color/TLBlue" />
			</LinearLayout>
	</LinearLayout>
    </LinearLayout>
</ScrollView>
